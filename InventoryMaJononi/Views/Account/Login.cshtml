
@{
    Layout = null;
}

<style>
    #brand-icon-id i{
        height: 200px;
        width: 100px
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/FontAwsome/css/all.min.css" rel="stylesheet" />
    <link href="~/Dashboard/css/sb-admin-2.min.css" rel="stylesheet" />

</head>

<body style="background-color:#002739">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            @*<div style="background-image:url(/images/Cover.jpg);background-repeat:no-repeat;background-size:contain;" class="col-lg-6 d-none d-lg-block text-center"></div>*@
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <span id="brand-icon-id"><i class="fas fa-truck-moving" style="color: dodgerblue;" height="200px" width="100px"></i></span>
                                        <h5 style="color: black; margin-bottom: 12px; font-weight: 700;">WELCOME TO MA JONONI COLOR HOUSE !!!</h5>
                                        @*<h5 style="color:black;margin-bottom: 12px; font-weight: 700;">Accounting</h5>*@
                                    </div>

                                    <form class="user" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        @*<div class="form-group">
                                                <select class="form-control" style="height:48px;border-radius:23px" name="storeId" id="storeId">
                                                    <option value="">Select Store</option>
                                                    @foreach (var data in @ViewBag.Data)
                                                    {
                                                        <option style="border-radius:23px" value="@data.Id">@data.storeName</option>
                                                    }
                                                </select>
                                            </div>*@
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="exampleInputEmail" name="Email" aria-describedby="emailHelp" placeholder="Enter ID">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" name="Password" id="exampleInputPassword" placeholder="Password">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" name="RememberMe" onclick="handleClick(this)" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Remember Me</label>
                                                <a class="collapse-item" asp-controller="Account" asp-action="Register">New User? Click here!</a>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-info btn-user btn-block">
                                            Login
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        function handleClick(cb) {
            if (cb.checked == true) {
                $('#customCheck').val(true);
            } else {
                $('#customCheck').val(false);
            }
        }


    </script>


    <script src="~/Dashboard/vendor/jquery/jquery.min.js"></script>
    <script src="~/Dashboard/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Dashboard/js/sb-admin-2.min.js"></script>

</body>
</html>
